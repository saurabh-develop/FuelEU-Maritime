generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Route {
  id                Int     @id @default(autoincrement())
  routeId           String  @unique
  vesselType        String
  fuelType          String
  year              Int
  ghgIntensity      Float
  fuelConsumption_t Float
  distance_km       Float
  totalEmissions_t  Float
  isBaseline        Boolean @default(false)
  createdAt         DateTime @default(now())
}

model BankingRecord {
  id        Int      @id @default(autoincrement())
  shipId    String
  year      Int
  amount    Float
  type      String   // 'BANK' or 'APPLY'
  createdAt DateTime @default(now())
}

model Pool {
  id        Int      @id @default(autoincrement())
  year      Int
  members   Json     // [{ shipId, cb_before, cb_after }]
  sumCB     Float
  createdAt DateTime @default(now())
}
