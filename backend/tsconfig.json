{
  "compilerOptions": {
    /* === File Paths === */
    "rootDir": "./src",
    "outDir": "./dist",

    /* === Module Settings === */
    "module": "commonjs", // ðŸ‘ˆ use "commonjs" for Node.js (safer with Express & Jest)
    "target": "es2020", // supports async/await and modern syntax
    "lib": ["es2020"], // modern JavaScript APIs
    "moduleResolution": "node", // resolve imports like Node

    /* === Type Definitions === */
    "types": ["node", "jest"], // ðŸ‘ˆ add Node & Jest types
    "esModuleInterop": true, // allows `import express from "express"`
    "resolveJsonModule": true, // import JSON files safely

    /* === Output === */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* === Strict Type Checking === */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,

    /* === Optional Nice-to-Haves === */
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src", "src/tests"],
  "exclude": ["node_modules", "dist"]
}
